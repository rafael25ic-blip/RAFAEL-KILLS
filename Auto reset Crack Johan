-- Este script va en un LocalScript, por ejemplo, en StarterPlayer -> StarterPlayerScripts

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()  -- Obt√©n el personaje

local function resetHealth()
    while character and character:FindFirstChild("Humanoid") do
        local humanoid = character.Humanoid
        humanoid.Health = 0  -- Pone la vida del humanoide a 0
        wait(1)  -- Espera 1 segundo antes de repetir
    end
end

-- Inicia el reset de vida
resetHealth()
